@model List<Blog>;



@foreach (Blog blog in Model)
{

    <div class="single-post mb-30">
        <div class="single-post-img">
            <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id">
                <img src="~/img/blog/@blog.Image" alt="post" style="height:90px ; width:90px;object-fit:cover">
                <div class="blog-hover">
                    <i class="fa fa-link"></i>
                </div>
            </a>
        </div>
        <div class="single-post-content">
            <h4><a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id">@blog.MainDescription</a></h4>
            <p>@blog.Name  /  @blog.Time.ToString("dd MMMM , yyyy")</p>
        </div>
    </div>
}