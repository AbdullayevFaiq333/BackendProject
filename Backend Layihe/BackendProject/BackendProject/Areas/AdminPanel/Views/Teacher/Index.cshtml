
@{
    ViewData["Title"] = "Index";
    List<Teacher> teachers = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Teacher</h4>
                <a asp-action="Create" class="btn btn-primary">Create</a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Position</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Teacher teacher in teachers)
                            {
                            <tr>
                                <td>
                                    <img src="~/img/teacher/@teacher.Image" style="width:100px !important ; height:100px !important" />
                                </td>
                                <td>
                                    @teacher.Name
                                </td>
                                <td>
                                    @teacher.Position.Name
                                </td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@teacher.Id" class="btn btn-success">Detail</a>
                                    <a asp-action="Update" asp-route-id="@teacher.Id" class="btn btn-warning">Update</a>
                                    <a asp-action="Delete" asp-route-id="@teacher.Id" class="btn btn-danger">Delete</a>
                                </td>

                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



