
@{
    ViewData["Title"] = "Index";
    List<Event> events = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Event</h4>
                <a asp-action="Create" class="btn btn-primary">Create</a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Title</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Event eventt in events)
                            {
                                <tr>
                                    <td>
                                        <img src="~/img/event/@eventt.Image" style="width:100px !important ; height:100px !important" />
                                    </td>
                                    <td>
                                        @eventt.Title
                                    </td>
                                    <td>
                                        <a asp-action="Detail" asp-route-id="@eventt.Id" class="btn btn-success">Detail</a>
                                        <a asp-action="Update" asp-route-id="@eventt.Id" class="btn btn-warning">Update</a>
                                        <a asp-action="Delete" asp-route-id="@eventt.Id" class="btn btn-danger">Delete</a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>





