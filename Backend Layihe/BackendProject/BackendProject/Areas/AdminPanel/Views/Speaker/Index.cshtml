
@{
    ViewData["Title"] = "Index";
    List<Speaker> speakers = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Speaker</h4>
                <a asp-action="Create" class="btn btn-primary">Create</a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Position</th>
                                <th>Event</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Speaker speaker in speakers)
                            {
                            <tr>
                                <td>
                                    <img src="~/img/event/@speaker.Image" style="width:100px !important ; height:100px !important" />
                                </td>
                                <td>
                                    @speaker.FullName
                                </td>
                                <td>
                                    @speaker.Position
                                </td>
                                @foreach (EventDetailSpeaker eventDetailSpeaker in speaker.EventDetailSpeakers)
                                {
                                    <td>
                                        @eventDetailSpeaker.EventDetail.Event.Title
                                    </td>
                                }

                                <td>
                                    <a asp-action="Update" asp-route-id="@speaker.Id" class="btn btn-warning">Update</a>
                                    <a asp-action="Delete" asp-route-id="@speaker.Id" class="btn btn-danger">Delete</a>
                                </td>

                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>






