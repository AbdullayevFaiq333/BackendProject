
@{
    ViewData["Title"] = "My Course Detail";
    Course course = Model;
}
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">My Course Detail</h3>
                <div class="row">
                    <div class="col-md-12">
                        <img src="~/img/course/@course.Image" class="img-fluid" />
                    </div>
                    <div class="col-md-12">
                        <div class="detailItem d-flex mt-2">
                            <h4>Title:</h4>
                            <span class="ml-2">@course.Name</span>
                        </div>
                        <div class="detailItem d-flex mt-3">
                            <h4>Description:</h4>
                            <span class="ml-2">@course.Description</span>
                        </div>
                        <div class="detailItem d-flex mt-3">
                            <h4>About Course:</h4>
                            <span class="ml-2">@course.CourseDetail.AboutCourse</span>
                        </div>
                        <div class="detailItem d-flex mt-3">
                            <h4>How To Apply:</h4>
                            <span class="ml-2">@course.CourseDetail.HowToApply</span>
                        </div>
                        
                        <div class="detailItem d-flex mt-3">
                            <h4>Certification:</h4>
                            <span class="ml-2">@course.CourseDetail.Certification</span>
                        </div>
                        <div class="detailItem d-flex mt-3">
                            <h4>Starts:</h4>
                            <span class="ml-2">@course.CourseDetail.Starts</span>
                        </div>
                        <div class="detailItem d-flex mt-3">
                            <h4>Duration:</h4>
                            <span class="ml-2">@course.CourseDetail.Duration</span>
                        </div>
                        <div class="detailItem d-flex mt-3">
                            <h4>Class Duration:</h4>
                            <span class="ml-2">@course.CourseDetail.ClassDuration</span>
                        </div>
                        <div class="detailItem d-flex mt-3">
                            <h4>Skill Level:</h4>
                            <span class="ml-2">@course.CourseDetail.SkillLevel</span>
                        </div>
                        <div class="detailItem d-flex mt-3">
                            <h4>Language:</h4>
                            <span class="ml-2">@course.CourseDetail.Language</span>
                        </div>
                        <div class="detailItem d-flex mt-3">
                            <h4>Assesments:</h4>
                            <span class="ml-2">@course.CourseDetail.Assesments</span>
                        </div>
                        <div class="detailItem d-flex mt-3">
                            <h4>CourseFee:</h4>
                            <span class="ml-2">@course.CourseDetail.CourseFee</span>
                        </div>
                        <div class="detailItem d-flex mt-3">
                            <h4>Students:</h4>
                            <span class="ml-2">@course.CourseDetail.Students</span>
                        </div>
                    </div>
                </div>
                <hr />
                <a asp-action="Index" class="btn btn-info text-light my-button">
                    <i class="mdi mdi-keyboard-backspace"></i> <span>Back</span>
                </a>
            </div>
        </div>
    </div>
</div>
