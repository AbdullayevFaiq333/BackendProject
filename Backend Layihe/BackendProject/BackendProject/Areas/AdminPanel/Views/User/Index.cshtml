
@{
    ViewData["Title"] = "Index";
    List<UserViewModel> users = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Users</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Fullname</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Is Active</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (UserViewModel user in users)
                            {
                            <tr>
                                <td>@user.Fullname</td>
                                <td>@user.Username</td>
                                <td>@user.Email</td>
                                <td>@user.Role</td>
                                @if (user.IsDeleted)
                                {
                                    <td>
                                        <p class="text-danger">Deactivate</p>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <p class="text-success">Activate</p>
                                    </td>
                                }

                            <td>
                                
                                <a asp-action="ChangeRole" asp-route-id="@user.Id" class="btn btn-warning">Change Role</a>
                                
                                @if (user.IsDeleted)
                                {
                                    <a asp-action="Activate" asp-route-id="@user.Id" class="btn btn-success">Activate</a>
                                }
                                else
                                {
                                    <a asp-action="Activate" asp-route-id="@user.Id" class="btn btn-danger">Deactivate </a>
                                }

                            </td>

                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


